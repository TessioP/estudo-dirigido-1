%% -------------------------------------------------- delimiters
\newcommand\pare[2][]{
  \ifx\\#1\\%
     \left( #2 \right)%
  \else%
     #1( #2 #1)%
  \fi%
}
\newcommand\brackets[2][]{
  \ifx\\#1\\%
     \left[ #2 \right]
  \else
     #1[ #2 #1]
  \fi
}
\newcommand\braces[2][]{
  \ifx\\#1\\%
     \left\lbrace #2 \right\rbrace
  \else
     #1\lbrace #2 #1\rbrace
  \fi
}
