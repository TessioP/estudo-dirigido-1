\newcommand{\interval}[3][]{
  \ifthenelse{ \equal{#2}{cc} }{
    \ifx\\#1\\%
      \left[ #3 \right]
    \else
       #1[ #3 #1]
    \fi
  }{
    \ifthenelse{ \equal{#2}{co} }{
      \ifx\\#1\\%
        \left[ #3 \right)
      \else
         #1[ #3 #1)
      \fi
    }{
      \ifthenelse{ \equal{#2}{oc} }{
        \ifx\\#1\\%
          \left( #3 \right]
        \else
           #1( #3 #1]
        \fi
      }{
        \ifthenelse{ \equal{#2}{oo} }{
          \ifx\\#1\\%
            \left( #3 \right)
          \else
             #1( #3 #1)
          \fi
        }{
          \PackageError{BesselSampling}{#2 not allowerd}{extra help}
        }
      }
    }
  }
}

